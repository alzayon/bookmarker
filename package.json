{
  "name": "bookmarker",
  "version": "0.0.1",
  "author": "Alexis Azanza",
  "homepage": "http://bookmarker.com/",
  "main": "./desktop/main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "mon": "nodemon --exec \"npm start\"",
    "build": "cd ionic && yarn install && yarn run ionic:build && yarn run deploy",
    "build:prod": "cd ionicapp && yarn install && yarn run ionic:build && yarn run deploy",
    "icons": "nicns --in desktop/images/icon.png --out build/icons.icns",
    "package:macos": "electron-packager . --icon=build/icons.icns --overwrite --ignore=\"(\\.(icns|md))|(.+\\.lock$)|(\\/ionic\\/)|(^\\..+$)|(typings)|((nodemon|tslint)\\.json)\"",
    "package:win": "electron-packager . --icon=server/images/icon.ico --overwrite --ignore=\"(\\.(icns|md))|(.+\\.lock$)|(\\/ionic\\/)|(^\\..+$)|(typings)|((nodemon|tslint)\\.json)\"",
    "pack": "build --dir",
    "publish": "run-s build:prod icons release",
    "release": "build -p always"
  },
  "build": {
    "appId": "com.alexisazanza.bookmarker",
    "files": [
      "desktop/**",
      "!ionicapp/**${/*}",
      "!**/node_modules/*/build${/*}",
      "**/node_modules/*/build/**/*.node",
      "!**/node_modules/*/bin/**/*.node",
      "!**/node_modules/*/deps${/*}",
      "!**/node_modules/**/{*.cc,*.obj,*.pdb}",
      "**/node_modules/node-pre-gyp${/*}"
    ],
    "directories": {
      "output": "./dist"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "alzayon",
        "repo": "bookmarker"
      }
    ]
  },
  "dependencies": {
    "electron-log": "^2.2.17",
    "electron-updater": "^3.1.2",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@ionic/app-scripts": "3.2.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4",
    "typescript": "~2.6.2"
  },
  "description": "A bookmarker application"
}
